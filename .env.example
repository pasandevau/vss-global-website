# VSS Global - Google Calendar Integration Environment Variables
# Copy this file to .env and fill in your actual values

# Google OAuth 2.0 Credentials
# Get these from Google Cloud Console → APIs & Services → Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Services Configuration
# The calendar ID is usually your email address
GOOGLE_CALENDAR_ID=admin@vssglobal.biz
# Get this by running: node setup-google-auth.js
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Email Configuration
# Gmail account for sending notifications
EMAIL_USER=admin@vssglobal.biz
# Gmail App Password (not your regular password)
# Generate at: Google Account → Security → 2-Step Verification → App passwords
EMAIL_APP_PASSWORD=your_gmail_app_password_here

# Server Configuration
# Backend API server port (frontend will be on 3000)
PORT=3001
NODE_ENV=development

# Production Environment Variables (for Netlify)
# When deploying to production, update these values:
# GOOGLE_REDIRECT_URI=https://vssglobal.biz/auth/google/callback
# NODE_ENV=production
